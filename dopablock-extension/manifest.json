{
  "manifest_version": 3,
  "name": "DopaBlock",
  "version": "1.0",
  "description": "Redirects harmful sites to a motivational page.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.pornhub.com/*",
    "*://*.xvideos.com/*",
    "*://*.redtube.com/*",
    "*://*.xnxx.com/*",
    "*://*.onlyfans.com/*"
  ],
  "action": {
    "default_title": "DopaBlock",
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
